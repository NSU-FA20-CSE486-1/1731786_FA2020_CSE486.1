<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".chef_reg_Frag">


    <EditText
        android:id="@+id/outlet"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="@color/black"
        android:hint="Outlet Name"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/ChefMobile"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Mobile Number"
        android:layout_below="@+id/outlet"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/ChefPass"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="@color/black"
        android:hint="Password"
        android:layout_below="@+id/ChefMobile"
        android:inputType="textPassword" />



        <Button
            android:id="@+id/ChefSignup_btn"
            android:layout_width="wrap_content"
            android:layout_below="@+id/ChefPass"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red_500"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="50dp"
            android:text="@string/sign_up" />





</RelativeLayout>