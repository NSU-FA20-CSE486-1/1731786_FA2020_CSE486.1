<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".AddFoodItems">


    <EditText
        android:id="@+id/itemName"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="@color/black"
        android:hint="Item Name"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/itemDetail"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Item Detail"
        android:layout_below="@+id/itemName"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/FoodCategorySpinner"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="@color/black"
        android:hint="Food Category"
        android:layout_below="@+id/itemDetail"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/itemPrice"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="@color/black"
        android:hint="Price"
        android:layout_below="@+id/FoodCategorySpinner"
        android:inputType="textPassword" />


    <ImageView
        android:id="@+id/itemImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/itemPrice"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_baseline_image_24" />


    <Button
        android:id="@+id/uploadItemImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemImageView"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:text="@string/upload_image" />

    <Button
        android:id="@+id/itemSubmitBtn"
        android:layout_width="match_parent"
        android:layout_below="@+id/uploadItemImage"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/submit" />


</RelativeLayout>